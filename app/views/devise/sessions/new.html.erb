<style type="text/css">
  @import url('https://netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.css');
@import url(https://fonts.googleapis.com/css?family=Lato:400,300,700);

html {
   height: 100%;
}

body {
/* Remember to use the other versions for IE 10 and older browsers! */
display: flex;
justify-content: center;
align-items: center;
min-height: 100%;
font-family: 'lato', sans-serif;
color: #fff;
background: #222222;
background: #16222A; /* fallback for old browsers */
background: -webkit-linear-gradient(to top, #003366 , #295370); /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to top, #003366 , #295370); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

}

.container {
  background:#4c7999;
  border-radius: 5px;
  box-shadow: 0 1.5px 0 0 rgba(0,0,0,0.1);
  width:500px;
  height: 430px;
  display: flex;  
  flex-direction: column;
}

.logo{
  font-family: "museo-slab";  
  font-size:20px;
  text-align: center;
  padding: 20px 20px 0;
  margin:0;
}

.login-item {
  color: #ffff;
  padding:23px 23px 0;

  width: 430px;

  margin-top: 80px;

  margin-left: 25px;
    
  border-radius: 3px;
}

input {
  border: 0;
  color: inherit;
  font: inherit;
  margin: 0;
  outline: 0;
  padding: 0;
  -webkit-transition: background-color .3s;
  transition: background-color .3s;
}

label.user {
  height: 60px;
}
label.lock {
  height: 60px;
}

.user:before {
  content: '\f007';
  font: 16px fontawesome;
  color: #999999;
  height: 60px;
}

.lock:before {
  content: '\f023';
  font: 16px fontawesome;
  color: #999999;
  height: 60px;
}

.form input[type="password"], .form input[type="email"], .form input[type="submit"] {
  height: 59px;
  width: 100%;

  &:focus {
      outline: none;
      transition: transform .15s ease;
      transform: scale(1.1);
    }
}

.form-login label,
.form-login input[type="email"],
.form-login input[type="password"],
.form-login input[type="submit"] {
  border-radius: 0.25rem;
  padding: 1rem;
  color: #3A3F44;  
}

.form-login label {
  background-color: #222222;
  border-bottom-right-radius: 0;
  border-top-right-radius: 0;
  padding-left: 1.25rem;
  padding-right: 1.25rem;
  
}

.form-login input[type="email"], .form-login input[type="password"] {
  background-color: #ffffff;
  border-bottom-left-radius: 0;
  border-top-left-radius: 0;
}
.form-login input[type="email"]:focus, .form-login input[type="email"]:hover, .form-login input[type="password"]:focus, .form-login input[type="password"]:hover {
  background-color: #eeeeee;
}
.form-login input[type="submit"] {
  background-color: #00B9BC;
  color: #eee;
  font-weight: bold;
  text-transform: uppercase;
}
.form-login input[type="submit"]:focus, .form-login input[type="submit"]:hover {
  background-color: #76d3c1;
}
.form-field {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-bottom: 2rem;
}


.hidden {
  border: 0;
  clip: rect(0 0 0 0);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute;
  width: 1px;
}

.text--center {
  text-align: center;
}


</style>






<div class="container">
    <!-- <div class="logo">Login</div> -->
    <div class="login-item">
      
      <form action="" method="post" class="form form-login">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form'}) do |f| %>
        <div class="form-field">
          <label class="user" for="login-username"></label>
          <!-- <input id="login-username" type="text" class="form-input" placeholder="Username" required> -->
          <%= f.email_field :email,class: "form-input" , placeholder: 'Email' , :id => 'ogin-username'%>
        </div>

        <div class="form-field">
          <label class="lock" for="login-password"><span class="hidden">Password</span></label>
          <!-- <input id="login-password" type="password" class="form-input" placeholder="Password" required> -->
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-input' , :id => 'login-password'%>
        </div>

        <div class="form-field">
          <%= f.submit "Log in"%>
        </div>
        <%end%>
      </form>
      
    </div>
</div>